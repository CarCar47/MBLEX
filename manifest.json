{
  "name": "Enhanced Quiz System - MBLEX Prep",
  "short_name": "MBLEX Quiz",
  "description": "Professional quiz system for MBLEX massage therapy certification preparation with offline capabilities",
  "version": "1.0.0",
  "manifest_version": 1,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "categories": ["education", "productivity", "utilities"],
  "lang": "en",
  "dir": "ltr",

  "icons": [
    {
      "src": "images/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "shortcuts": [
    {
      "name": "Start Quiz",
      "short_name": "Quiz",
      "description": "Start a new quiz session",
      "url": "/?action=start-quiz",
      "icons": [
        {
          "src": "images/shortcut-quiz.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Review Topics",
      "short_name": "Topics",
      "description": "Review available quiz topics",
      "url": "/?action=topics",
      "icons": [
        {
          "src": "images/shortcut-topics.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Study Progress",
      "short_name": "Progress",
      "description": "View study progress and statistics",
      "url": "/?action=progress",
      "icons": [
        {
          "src": "images/shortcut-progress.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "screenshots": [
    {
      "src": "images/screenshot-mobile-1.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Quiz interface on mobile"
    },
    {
      "src": "images/screenshot-desktop-1.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Quiz interface on desktop"
    }
  ],

  "prefer_related_applications": false,

  "protocol_handlers": [
    {
      "protocol": "web+quiz",
      "url": "/?quiz=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "related_applications": [],

  "offline_enabled": true,

  "features": [
    "offline-questions",
    "progress-tracking",
    "accessibility",
    "responsive-design",
    "touch-gestures"
  ]
}